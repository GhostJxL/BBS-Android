<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/colorMainBgLight">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_civ_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/colorMainBgLight"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/item_civ_avatar"
            android:gravity="left"
            tools:text="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/author"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/author"
            android:gravity="left"
            android:text="回复"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/main_collection_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/release"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_my_collection" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/author"
            android:layout_below="@+id/author"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            tools:text="2"
            android:lines="2"
            android:textColor="@color/colorTvBlackMain"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            tools:text="time"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>
