<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBgLight"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_thread_content"
        android:layout_marginStart="@dimen/margin_thread_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selector_foreground_settings"
            android:orientation="vertical"
            android:clickable="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="国际人文交流盛宴：天津大学第十届“国际文化节”成功举办"
                android:textColor="@color/colorTvBlackMain"
                android:textSize="@dimen/text_size_thread_title"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_thread_content"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/iv_content"
                    android:layout_width="@dimen/size_image_thread_content_width"
                    android:layout_height="@dimen/size_image_thread_content_width"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_default_left"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_thread_content_content_text"
                    android:layout_toEndOf="@id/iv_content"
                    android:maxLines="6"
                    android:text="5月6日上午10时，“留学天大，情系中华——天津大学第十届‘国际文化节’”于卫津路校区北洋广场正式开幕。本届国际文化节旨在增进中外大学生的了解和友谊，为世界各地多元文化搭建相互交流的舞台，最终推动我校中外人文交流品牌项目的建设。来自不同国家和地区的留学生以歌舞形式展示世界不同民族的文化特色，通过丰富的图片、各国工艺品、风味美食等形式传播各国文化，每年吸引数千名校内外人士参观和交流。"
                    android:textColor="@color/colorTvBlackMain"
                    android:textSize="@dimen/text_size_thread_content"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="4dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-5-5"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="作者：2123123"
                        />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>