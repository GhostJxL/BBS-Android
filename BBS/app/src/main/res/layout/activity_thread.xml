<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/pb_thread_loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMainBg"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorThreadContentBg"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_thread_content"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_avatar_thread"
                            android:layout_width="@dimen/size_avatar_normal"
                            android:layout_height="@dimen/size_avatar_normal"
                            android:src="@drawable/avatar1"
                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/civ_avatar_thread"
                            >

                            <TextView
                                android:id="@+id/tv_username_thread"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textColor="@color/colorTvBlackMainTint"
                                android:textSize="14sp"
                                tools:text="中文名"
                                />

                            <TextView
                                android:id="@+id/tv_level_thread"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@+id/tv_username_thread"
                                android:background="@drawable/honor_shape_bg"
                                android:paddingEnd="2dp"
                                android:paddingStart="2dp"
                                android:text="lv 1"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/tv_datetime_thread"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/tv_username_thread"
                                android:layout_below="@+id/tv_username_thread"
                                android:paddingTop="2dp"
                                android:textSize="12sp"
                                tools:text="2017-11-11"
                                />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_star_thread"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_star_border_white_24dp"
                            />

                        <ImageView
                            android:id="@+id/iv_stared_thread"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_star_white_24dp"
                            android:visibility="gone"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textColor="@color/colorTvBlackMain"
                        android:textSize="18sp"
                        tools:text="挑剔大家发多少"
                        />

                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:id="@+id/htv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textColor="@color/colorTvBlackMainTint"
                        android:textSize="14sp"
                        tools:text="挑剔大家发多少aflsjlfsj大家来决定是否了解爱上了飞机来打扫房间2017年05月22日23:45:052017年05月22日23:45:07"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_thread_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorThreadContentBg"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fb_thread_write_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="12dp"
            android:clickable="true"
            android:src="@drawable/ic_insert_comment_white_24dp"
            app:fabSize="normal"
            app:layout_behavior="com.twtstudio.bbs.bdpqchen.bbs.commons.support.FABScrollBehavior"
            />


    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>