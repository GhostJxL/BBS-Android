<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBgLight"
    android:foreground="@drawable/selector_foreground_settings"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_civ_avatar"
            android:layout_width="@dimen/size_avatar_normal"
            android:layout_height="@dimen/size_avatar_normal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/item_civ_avatar"
            android:gravity="left"
            android:textSize="15sp"
            tools:text="1"/>

        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/author"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/author"
            android:gravity="left"
            android:text="发布"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/author"
            android:layout_below="@+id/author"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:textColor="@color/colorTvBlackMain"
            android:textSize="18sp"
            tools:text="2"/>

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textSize="14sp"
            tools:text="time"/>

    </RelativeLayout>
</FrameLayout>
