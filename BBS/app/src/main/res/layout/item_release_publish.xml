<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_publish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBgLight"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector_foreground_settings"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:textColor="@color/colorTvBlackMainTint"
        android:textSize="18sp"
        tools:text="here 中文中文中文中文中文"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:padding="8dp"
        android:textColor="@color/colorTvBlackMain"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        />

    <TextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_title"
        android:layout_below="@+id/tv_content"
        tools:text="评论 : 18           时间 : 2017年5月12日"
        android:textSize="12sp"
        />

</RelativeLayout>
