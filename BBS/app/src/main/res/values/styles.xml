<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlActivated">@color/colorPrimaryCopy</item>
        <item name="android:lineSpacingExtra">3dp</item>

    </style>

    <style name="AppTheme.Intro" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditText.Register" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.EditText.Comment" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="tvTextSizeNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/colorMainText</item>
    </style>

    <style name="tvTextSizeVeryLittle">
        <item name="android:textSize">10sp</item>
        <item name="android:color">@color/colorMainText</item>
    </style>

    <style name="tvSupportNightMode">
        <item name="android:textColor">@color/colorTvBlackMain</item>
    </style>

    <style name="NightAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAboveWhiteImage" parent="@android:style/TextAppearance">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="root">
        <item name="android:background">#fff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="WebTitle"
           parent="@android:style/TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/material_light_white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="about_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_595959</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:paddingLeft">@dimen/space_18</item>
        <item name="android:paddingRight">@dimen/space_18</item>
    </style>
    <style name="about_goup">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_7c7c7c</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:paddingLeft">@dimen/space_18</item>
        <item name="android:paddingRight">@dimen/space_18</item>
    </style>

</resources>
