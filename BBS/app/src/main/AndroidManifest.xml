        <activity android:name=".forum.boards.thread_list.ThreadListActivity"/>
        <activity android:name=".main.content.ContentActivity"/>
        <activity android:name=".individual.my_release.MyReleaseActivity"/>
        <activity android:name=".auth.renew.identify.IdentifyActivity"/>
        <activity android:name=".auth.renew.appeal.AppealPassportActivity"/>
        <activity android:name=".auth.renew.identify.retrieve.RetrieveActivity"/>
        <activity android:name=".auth.renew.identify.retrieve.reset_password.ResetPasswordActivity"/>
        <activity android:name=".forum.boards.create_thread.CreateThreadActivity"
            />
        <activity android:name=".auth.register.RegisterOldActivity"/>
        <activity
            android:name=".welcome.IntroActivity"
            android:theme="@style/AppTheme.Intro"
            />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity android:name=".individual.avatar.UpdateAvatarActivity"/>


    </application>

