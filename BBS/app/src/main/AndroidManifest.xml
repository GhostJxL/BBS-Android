<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twtstudio.bbs.bdpqchen.bbs">

    <!--
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
        <uses-permission android:name="android.permission.LOCATION_HARDWARE"/>
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.twtstudio.bbs.bdpqchen.bbs.commons.support.SimpleGlideModule"
            android:value="GlideModule" />

        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" />
        <activity
            android:name=".auth.register.RegisterActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <activity
            android:name=".auth.replaceUser.ReplaceUserActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
        <activity android:name=".auth.replaceUser.replacePassword.ReplacePasswordActivity" />
        <activity
            android:name=".auth.login.LoginActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />

        <activity android:name=".individual.settings.SettingsActivity" />
        <activity android:name=".individual.updateInfo.UpdateInfoActivity" />
        <activity android:name=".individual.updatePassword.UpdatePassword" />
        <activity android:name=".individual.avatar.ImagePickerActivity"
                  android:windowSoftInputMode="stateHidden|stateAlwaysHidden"/>
        <activity android:name=".forum.boards.BoardsActivity" />
        <activity android:name=".forum.boards.thread.ThreadActivity" />
        <activity android:name=".test.SecondActivity" />
        <activity android:name=".individual.message.MessageActivity"/>
        <activity android:name=".individual.collection.CollectionActivity"/>
        <activity android:name=".forum.boards.thread_list.ThreadListActivity"/>
        <activity android:name=".main.content.ContentActivity" />
        <activity android:name=".individual.my_release.MyReleaseActivity"/>
        <activity android:name=".welcome.WelcomeActivity"/>
        <activity android:name=".auth.renew.identify.IdentifyActivity"/>
        <activity android:name=".auth.renew.appeal.AppealPassportActivity"/>
        <activity android:name=".auth.renew.identify.retrieve.RetrieveActivity"/>
        <activity android:name=".auth.renew.identify.retrieve.reset_password.ResetPasswordActivity"/>


    </application>

</manifest>